# Paths for the installer repo
export PK_HOME="${PK_HOME:-$HOME/deskpi-karaoke}"
export PK_REMOTE="${PK_REMOTE:-https://github.com/junclemente/deskpi-karaoke.git}"

# Runtime bits
export PK_VENV="${PK_VENV:-$HOME/.venv-pikaraoke}"
export PK_LOG="${PK_LOG:-$HOME/pikaraoke_output.log}"

pk() {
  case "$1" in
    update)
      echo "ğŸ“¥ Updating PiKaraoke *installer* (default branch)..."
      # ensure repo exists and is a git repo
      if [ ! -d "$PK_HOME/.git" ]; then
        echo "â„¹ï¸ $PK_HOME is not a git repo. Cloning fresh..."
        rm -rf "$PK_HOME" && git clone "$PK_REMOTE" "$PK_HOME" || { echo "âŒ Clone failed"; return 1; }
      fi
      git -C "$PK_HOME" pull --ff-only || { echo "âŒ Git update failed"; return 1; }
      echo "â–¶ï¸ Applying installer updates..."
      python3 "$PK_HOME/install.py" || { echo "âŒ Installer update failed"; return 1; }
      echo "â™»ï¸ Rebooting to let PiKaraoke self-check run on boot..."
      sudo reboot
      ;;

    devupdate|dev)
      echo "ğŸ›  Updating PiKaraoke *installer* (dev branch)..."
      if [ ! -d "$PK_HOME/.git" ]; then
        echo "â„¹ï¸ $PK_HOME is not a git repo. Cloning fresh..."
        rm -rf "$PK_HOME" && git clone "$PK_REMOTE" "$PK_HOME" || { echo "âŒ Clone failed"; return 1; }
      fi
      git -C "$PK_HOME" fetch --prune || { echo "âŒ git fetch failed"; return 1; }
      # checkout dev (create tracking branch if needed)
      git -C "$PK_HOME" rev-parse --verify dev >/dev/null 2>&1 \
        || git -C "$PK_HOME" checkout -t origin/dev || true
      git -C "$PK_HOME" checkout dev || { echo "âŒ Could not switch to dev branch"; return 1; }
      git -C "$PK_HOME" pull --ff-only origin dev || { echo "âŒ Git update failed"; return 1; }
      echo "â–¶ï¸ Applying installer updates from dev..."
      python3 "$PK_HOME/install.py" || { echo "âŒ Installer update failed"; return 1; }
      echo "â™»ï¸ Rebooting to let PiKaraoke self-check run on boot..."
      sudo reboot
      ;;

    start)
      echo "ğŸ¤ Starting PiKaraoke..."
      if [ -x "$PK_VENV/bin/pikaraoke" ]; then
        CMD="$PK_VENV/bin/pikaraoke"
      elif command -v pikaraoke >/dev/null 2>&1; then
        CMD="pikaraoke"
      elif [ -x "$PK_VENV/bin/python" ]; then
        CMD="$PK_VENV/bin/python -m pikaraoke"
      else
        CMD="python3 -m pikaraoke"
      fi
      nohup bash -lc "$CMD" > "$PK_LOG" 2>&1 &
      disown
      echo "â„¹ï¸ Running in background (log: $PK_LOG)"
      ;;

    help|*|"")
      echo ""
      echo "ğŸ“Œ PiKaraoke Commands:"
      echo "   pk update     â†’ Update installer (default branch) & reboot"
      echo "   pk devupdate  â†’ Update installer (dev branch) & reboot"
      echo "   pk start      â†’ Start PiKaraoke manually"
      echo "   pk help       â†’ Show this help message"
      echo ""
      ;;
  esac
}
